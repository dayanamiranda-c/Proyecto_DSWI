@*@* Views/Account/AccessDenied.cshtml *@
@{
    ViewData["Title"] = "Acceso Denegado (403)";
    Layout = "_LayoutLogin"; // Usaremos un layout simple para la vista de seguridad
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card p-5 text-center shadow-lg border-danger" style="max-width: 450px;">
        <i class="bi bi-lock-fill text-danger display-1 mb-3"></i>
        <h1 class="card-title fw-bold text-danger">403</h1>
        <h3 class="mb-4">Acceso Denegado</h3>

        @if (User.Identity!.IsAuthenticated)
        {
            <p class="text-muted">El usuario **@User.Identity.Name** no cuenta con los permisos necesarios (roles) para ver esta página.</p>
            <p class="mt-4">
                <a asp-controller="Catalogo" asp-action="Inicio" class="btn btn-outline-primary btn-lg w-100">
                    Volver al Panel de Inicio
                </a>
            </p>
        }
        else
        {
            <p class="text-muted">Necesitas iniciar sesión para acceder a este recurso.</p>
            <p class="mt-4">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg w-100">
                    Ir a Iniciar Sesión
                </a>
            </p>
        }
    </div>
</div>