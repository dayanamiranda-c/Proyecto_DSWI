@{
    ViewData["Title"] = "Compra Exitosa";
}

<div class="container mt-5 text-center">
    <div class="card shadow border-success mx-auto" style="max-width: 600px;">
        <div class="card-header bg-success text-white">
            <h3><i class="bi bi-check-circle-fill"></i> ¡Gracias por tu compra!</h3>
        </div>
        <div class="card-body py-5">
            <h5 class="card-title text-success">Tu pedido ha sido procesado correctamente.</h5>
            <p class="card-text mt-3">
                Hemos registrado tu orden en el sistema. 
                <br />
                Pronto nos pondremos en contacto para el envío.
            </p>
            
            <hr />
            
            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mt-4">
                <a asp-controller="Catalogo" asp-action="Index" class="btn btn-primary">
                    Volver a la Tienda
                </a>
                </div>
        </div>
    </div>
</div>