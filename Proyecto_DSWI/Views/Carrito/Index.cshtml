@model List<Proyecto_DSWI.Models.CarritoItemViewModel>

<h2>Tu Carrito de Compras</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Subtotal</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    <span class="fw-bold text-dark">@item.NombreProducto</span>
                </td>
                <td class="align-middle">S/ @item.Precio.ToString("N2")</td>

                <td class="align-middle">
                    <div class="input-group input-group-sm" style="width: 140px;">
                        <a asp-action="Disminuir" asp-route-id="@item.ProductoId"
                           class="btn btn-outline-secondary fw-bold">
                            <i class="bi bi-dash"></i>
                        </a>

                        <input type="text" class="form-control text-center bg-white"
                               value="@item.Cantidad" readonly />

                        <a asp-action="Agregar" asp-route-id="@item.ProductoId"
                           class="btn btn-outline-secondary fw-bold">
                            <i class="bi bi-plus"></i>
                        </a>
                    </div>
                </td>

                <td class="align-middle fw-bold text-primary">
                    S/ @item.Subtotal.ToString("N2")
                </td>

                <td class="align-middle text-center">
                    <a asp-action="Eliminar" asp-route-id="@item.ProductoId"
                       class="btn btn-sm btn-danger" title="Quitar del carrito">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-end"><strong>Total:</strong></td>
            <td><strong>@Model.Sum(x => x.Subtotal)</strong></td>
            <td></td>
        </tr>
    </tfoot>
</table>

<div class="mt-3">
    <a asp-controller="Catalogo" asp-action="Index" class="btn btn-secondary">Seguir Comprando</a>

    <form asp-action="ProcesarCompra" method="post" style="display:inline;">
        <button type="submit" class="btn btn-success">Confirmar Compra</button>
    </form>
</div>