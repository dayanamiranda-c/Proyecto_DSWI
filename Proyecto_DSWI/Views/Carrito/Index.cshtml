@model List<Proyecto_DSWI.Models.CarritoItemViewModel>

@{
    ViewData["Title"] = "Tu Carrito";
    decimal total = Model.Sum(x => x.Subtotal);
}

<div class="container mt-5">
    <h2><i class="bi bi-cart4"></i> Carrito de Compras</h2>
    <hr />

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    }

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            <h4>Tu carrito está vacío</h4>
            <p>¡Agrega productos para comenzar!</p>
            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-primary">Ir al Catálogo</a>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Producto</th>
                            <th class="text-end">Precio</th>
                            <th class="text-center">Cantidad</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.NombreProducto</td>
                                <td class="text-end">@item.Precio.ToString("C")</td>
                                <td class="text-center">
                                    <span class="badge bg-secondary">@item.Cantidad</span>
                                </td>
                                <td class="text-end fw-bold">@item.Subtotal.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="3" class="text-end fw-bold fs-5">TOTAL A PAGAR:</td>
                            <td class="text-end fw-bold fs-5 text-success">@total.ToString("C")</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-outline-secondary">
                &larr; Seguir Comprando
            </a>

            <form asp-action="ProcesarCompra" method="post">
                <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('¿Estás seguro de finalizar la compra?');">
                    <i class="bi bi-credit-card"></i> Pagar y Finalizar
                </button>
            </form>
        </div>
    }
</div>