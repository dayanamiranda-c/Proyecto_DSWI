@model Proyecto_DSWI.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-4" style="max-width: 700px;">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Editar Producto</h4>
        </div>
        <div class="card-body">
            <form asp-action="Editar">
                <input type="hidden" asp-for="ProductoId" />

                <input type="hidden" asp-for="Sku" />
                <input type="hidden" asp-for="CodigoBarras" />
                <input type="hidden" asp-for="CreadoEn" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label fw-bold">Nombre del Producto</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CategoriaId" class="form-label fw-bold">Categoría</label>
                        <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.Categorias"></select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="PrecioLista" class="form-label fw-bold">Precio (S/.)</label>
                        <input asp-for="PrecioLista" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="PrecioLista" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-primary px-4">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}