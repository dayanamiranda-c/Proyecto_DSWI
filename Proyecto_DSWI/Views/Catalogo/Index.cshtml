@model IEnumerable<Proyecto_DSWI.Models.Producto>

@{
    ViewData["Title"] = "Listado de Productos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Listado de Productos</h2>
        <a asp-action="Inicio" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver al Catálogo
        </a>

        <a asp-action="Nuevo" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-lg"></i> Nuevo Producto
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">SKU</th>
                        <th>Producto</th>
                        <th>Categoría</th>
                        <th>Precio Lista</th>
                        <th>Estado</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-secondary">@item.Sku</td>
                                <td>
                                    <span class="d-block fw-bold text-dark">@item.Nombre</span>
                                    @if (!string.IsNullOrEmpty(item.Descripcion))
                                    {
                                        <small class="text-muted">@item.Descripcion</small>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-light text-dark border">
                                        @(item.Categoria?.Nombre ?? "Sin Categoría")
                                    </span>
                                </td>
                                <td>
                                    S/. @((item.PrecioLista ?? 0).ToString("N2"))
                                </td>
                                <td>
                                    @if (item.Activo)
                                    {
                                        <span class="badge bg-success bg-opacity-75">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger bg-opacity-75">Inactivo</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <a asp-controller="Carrito"
                                       asp-action="Agregar"
                                       asp-route-id="@item.ProductoId"
                                       class="btn btn-sm btn-success me-2"
                                       title="Agregar al Carrito">
                                        <i class="bi bi-cart-plus"></i> Agregar
                                    </a>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Editar" asp-route-id="@item.ProductoId"
                                           class="btn btn-sm btn-outline-primary" title="Editar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <a asp-action="Eliminar" asp-route-id="@item.ProductoId"
                                           class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No hay productos registrados. ¡Agrega uno nuevo!
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>