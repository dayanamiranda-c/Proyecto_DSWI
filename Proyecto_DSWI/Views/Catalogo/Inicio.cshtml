@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-5">
    <div class="mb-5">
        <h1 class="fw-bold text-dark">Bienvenido a Inka Productos</h1>
        <p class="text-muted fs-5">Panel de control principal.</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm border-0" style="border-left: 5px solid #6f42c1 !important;">
                <div class="card-body p-4">
                    <h4 class="card-title fw-bold">Productos</h4>
                    <p class="text-muted mt-3">Administra el catálogo completo.</p>
                    <a asp-action="Index" class="text-decoration-none fw-bold" style="color: #6f42c1;">
                        Ir al Listado &rarr;
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm border-0" style="border-left: 5px solid #ffc107 !important;">
                <div class="card-body p-4">
                    <h4 class="card-title fw-bold">Mi Carrito</h4>
                    <p class="text-muted mt-3">Revisa tus compras pendientes.</p>
                    <a asp-controller="Carrito" asp-action="Index" class="text-warning text-decoration-none fw-bold">
                        Ver Carrito &rarr;
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm border-0" style="border-left: 5px solid #0d6efd !important;">
                <div class="card-body p-4">
                    <h4 class="card-title fw-bold">Inventario</h4>
                    <p class="text-muted mt-3">Stock actual por almacén.</p>
                    <a asp-action="Inventario" class="text-primary text-decoration-none fw-bold">
                        Ver Stock &rarr;
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="card h-100 shadow-sm border-0" style="border-left: 5px solid #198754 !important;">
                <div class="card-body p-4">
                    <h4 class="card-title fw-bold">Movimientos</h4>
                    <p class="text-muted mt-3">Historial de entradas y salidas.</p>
                    <a asp-action="Movimientos" class="text-success text-decoration-none fw-bold">
                        Ver Historial &rarr;
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>