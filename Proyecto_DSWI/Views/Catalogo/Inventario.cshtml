@model IEnumerable<Proyecto_DSWI.Models.Inventario>

@{
    ViewData["Title"] = "Control de Inventario";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-primary fw-bold">Stock de Inventario Actual</h2>
            <p class="text-muted mb-0">Consulta la disponibilidad de productos por almacén.</p>
        </div>
        <a asp-action="Inicio" class="btn btn-outline-secondary">
            Volver al Inicio
        </a>
    </div>

    <div class="card bg-light border-0 mb-4">
        <div class="card-body py-3">
            <form asp-action="Inventario" method="get" class="row g-3 align-items-center">
                <div class="col-auto">
                    <label class="fw-bold text-secondary">Filtrar por Almacén:</label>
                </div>
                <div class="col-auto flex-grow-1" style="max-width: 300px;">
                    <select name="id" class="form-select" asp-items="ViewBag.Almacenes" onchange="this.form.submit()">
                        <option value="">-- Ver Todos los Almacenes --</option>
                    </select>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Almacén</th>
                        <th>Producto / SKU</th>
                        <th class="text-center">Estado Stock</th>
                        <th class="text-end table-active fw-bold">Cantidad Actual</th>
                        <th class="text-end text-muted">Mínimo</th>
                        <th class="text-end text-muted">Máximo</th>
                        <th class="text-end pe-4">Últ. Actualización</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            // Lógica simple para el color de la fila según el stock
                            string estadoClase = "bg-success";
                            string estadoTexto = "Normal";

                            if (item.Cantidad <= item.StockMin)
                            {
                                estadoClase = "bg-danger";
                                estadoTexto = "Crítico";
                            }
                            else if (item.StockMax.HasValue && item.Cantidad > item.StockMax.Value)
                            {
                                estadoClase = "bg-warning text-dark";
                                estadoTexto = "Exceso";
                            }

                            <tr>
                                <td class="ps-4">
                                    <i class="bi bi-shop-window text-secondary me-2"></i>
                                    @item.Almacen?.Nombre
                                </td>
                                <td>
                                    <div class="fw-bold">@item.Producto?.Nombre</div>
                                    <div class="small text-muted">@item.Producto?.Sku</div>
                                </td>
                                <td class="text-center">
                                    <span class="badge @estadoClase bg-opacity-75 rounded-pill px-3">
                                        @estadoTexto
                                    </span>
                                </td>
                                <td class="text-end table-active fw-bold fs-5">
                                    @item.Cantidad.ToString("N2")
                                </td>
                                <td class="text-end text-muted">
                                    @item.StockMin.ToString("N2")
                                </td>
                                <td class="text-end text-muted">
                                    @(item.StockMax.HasValue? item.StockMax.Value.ToString("N2") : "-")
                                </td>
                                <td class="text-end pe-4 small text-secondary">
                                    @item.UltimaActualizacion.ToString("dd/MM/yy HH:mm")
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                No hay stock registrado con los filtros seleccionados.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>