@model IEnumerable<Proyecto_DSWI.Models.InventarioViewModel>

@{
    ViewData["Title"] = "Reporte de Inventario";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold"><i class="bi bi-boxes"></i> Inventario Actual</h2>
        <a asp-action="Inicio" class="btn btn-outline-secondary">
            &larr; Volver al Panel
        </a>
    </div>

    <div class="mb-3 btn-group">
        <a asp-action="Inventario" asp-route-id="" class="btn btn-outline-primary active">Todos</a>
        <a asp-action="Inventario" asp-route-id="1" class="btn btn-outline-primary">Almacén Central</a>
        <a asp-action="Inventario" asp-route-id="2" class="btn btn-outline-primary">Tienda Principal</a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-4">Producto</th>
                        <th>Almacén</th>
                        <th class="text-center">Stock Mín.</th>
                        <th class="text-center">Stock Actual</th>
                        <th class="text-end pe-4">Valor Total</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <span class="fw-bold d-block">@item.Producto</span>
                                    <small class="text-muted">SKU: @item.Sku</small>
                                </td>
                                <td><span class="badge bg-secondary">@item.Almacen</span></td>
                                <td class="text-center">@item.StockMinimo</td>
                                <td class="text-center">
                                    @if (item.StockActual <= item.StockMinimo)
                                    {
                                        <span class="badge bg-danger">@item.StockActual (Bajo)</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@item.StockActual</span>
                                    }
                                </td>
                                <td class="text-end pe-4 fw-bold text-primary">
                                    S/ @item.ValorTotal.ToString("N2")
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4">No hay datos de inventario disponibles.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>