@model IEnumerable<Proyecto_DSWI.Models.MovimientoViewModel>

@{
    ViewData["Title"] = "Historial de Movimientos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-success fw-bold"><i class="bi bi-clock-history"></i> Historial de Movimientos</h2>
            <p class="text-muted mb-0">Registro de auditoría de inventario (Entradas/Salidas/Ventas)</p>
        </div>
        <a asp-action="Inicio" class="btn btn-outline-secondary">
            &larr; Volver al Panel
        </a>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Fecha / Hora</th>
                        <th>Producto</th>
                        <th>Almacén</th>
                        <th class="text-center">Tipo</th>
                        <th class="text-center">Cantidad</th>
                        <th class="text-end pe-4">Usuario</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-muted small">
                                    <i class="bi bi-calendar3 me-1"></i> @item.Fecha.ToString("dd/MM/yyyy") <br />
                                    <i class="bi bi-clock me-1"></i> @item.Fecha.ToString("HH:mm")
                                </td>
                                <td>
                                    <span class="fw-bold d-block text-dark">@item.Producto</span>
                                    <span class="badge bg-light text-secondary border">@item.Sku</span>
                                </td>
                                <td>@item.Almacen</td>
                                <td class="text-center">
                                    @if (item.TipoMovimiento.ToUpper().Contains("ENTRADA") || item.TipoMovimiento.ToUpper() == "COMPRA")
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success px-3">
                                            <i class="bi bi-arrow-down-circle-fill me-1"></i> ENTRADA
                                        </span>
                                    }
                                    else if (item.TipoMovimiento.ToUpper().Contains("SALIDA") || item.TipoMovimiento.ToUpper() == "VENTA")
                                    {
                                        <span class="badge bg-danger bg-opacity-10 text-danger border border-danger px-3">
                                            <i class="bi bi-arrow-up-circle-fill me-1"></i> SALIDA
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark border px-3">
                                            @item.TipoMovimiento
                                        </span>
                                    }
                                </td>
                                <td class="text-center fw-bold fs-5">
                                    @if (item.TipoMovimiento.ToUpper().Contains("SALIDA") || item.TipoMovimiento.ToUpper() == "VENTA")
                                    {
                                        <span class="text-danger">-@item.Cantidad</span>
                                    }
                                    else
                                    {
                                        <span class="text-success">+@item.Cantidad</span>
                                    }
                                </td>
                                <td class="text-end pe-4 text-muted small">
                                    <i class="bi bi-person-circle"></i> @item.Usuario
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="bi bi-journal-x fs-1 d-block mb-3"></i>
                                No hay movimientos registrados aún.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>