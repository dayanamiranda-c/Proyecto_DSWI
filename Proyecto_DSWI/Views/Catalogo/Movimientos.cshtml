@model IEnumerable<Proyecto_DSWI.Models.InventarioMovimiento>

@{
    ViewData["Title"] = "Historial de Movimientos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Historial de Movimientos de Inventario</h2>
        <a asp-action="Inicio" class="btn btn-outline-secondary">
            &larr; Volver al Catálogo
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Fecha</th>
                        <th>Almacén</th>
                        <th>Producto</th>
                        <th class="text-center">Tipo</th>
                        <th class="text-end">Cantidad</th>
                        <th>Referencia</th>
                        <th class="text-muted">Usuario</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-secondary">
                                    @item.FechaMovimiento.ToString("dd/MM/yyyy HH:mm")
                                </td>
                                <td>
                                    <span class="fw-bold text-dark">@item.Almacen?.Nombre</span>
                                </td>
                                <td>
                                    <span class="text-primary">@item.Producto?.Nombre</span>
                                    <br />
                                    <small class="text-muted" style="font-size: 0.8em;">SKU: @item.Producto?.Sku</small>
                                </td>
                                <td class="text-center">
                                    @if (item.TipoMovimiento == "ENTRADA")
                                    {
                                        <span class="badge bg-success bg-opacity-75 rounded-pill px-3">Entrada</span>
                                    }
                                    else if (item.TipoMovimiento == "SALIDA")
                                    {
                                        <span class="badge bg-danger bg-opacity-75 rounded-pill px-3">Salida</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark rounded-pill px-3">Ajuste</span>
                                    }
                                </td>
                                <td class="text-end fw-bold">
                                    @if (item.TipoMovimiento == "SALIDA")
                                    {
                                        <span class="text-danger">- @item.Cantidad.ToString("N2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-success">+ @item.Cantidad.ToString("N2")</span>
                                    }
                                </td>
                                <td>
                                    <span class="text-muted small">@item.Referencia</span>
                                </td>
                                <td class="text-muted small">
                                    @item.Usuario
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                <i class="bi bi-clipboard-x display-6 d-block mb-2"></i>
                                No se han registrado movimientos de inventario aún.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>