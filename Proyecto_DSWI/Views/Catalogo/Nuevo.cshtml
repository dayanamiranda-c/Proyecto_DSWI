@model Proyecto_DSWI.Models.Producto

@{
    ViewData["Title"] = "Registrar Nuevo Producto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 fw-bold">Registrar Nuevo Producto</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Nuevo" method="post">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Sku" class="form-label fw-bold">SKU</label>
                                <input asp-for="Sku" class="form-control" placeholder="Ej. LAP-DELL-001" />
                                <span asp-validation-for="Sku" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CategoriaId" class="form-label fw-bold">Categoría</label>
                                <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.Categorias">
                                    <option value="">-- Seleccione Categoría --</option>
                                </select>
                                <span asp-validation-for="CategoriaId" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Nombre" class="form-label fw-bold">Nombre del Producto</label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ej. Laptop HP Pavilion 15" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Descripcion" class="form-label">Descripción</label>
                                <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Detalles del producto..."></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CodigoBarras" class="form-label">Código Barras (EAN/UPC)</label>
                                <input asp-for="CodigoBarras" class="form-control" placeholder="Ej. 7751234567890" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PrecioLista" class="form-label fw-bold">Precio Lista (S/.)</label>
                                <div class="input-group">
                                    <span class="input-group-text">S/.</span>
                                    <input asp-for="PrecioLista" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="PrecioLista" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mt-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="Activo" checked>
                                    <label class="form-check-label" asp-for="Activo">Producto Activo</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-primary px-4">Guardar Producto</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}